// Prisma schema for Otunba Campaign - Ogun State 2027
// Database: Supabase PostgreSQL
// Run: npx prisma generate && npx prisma db push (or prisma migrate dev)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Volunteer {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String
  phone     String
  lga       String
  message   String?
  createdAt DateTime @default(now())
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
}
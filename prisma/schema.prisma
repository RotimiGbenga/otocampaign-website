// Prisma schema for Otunba Campaign - Ogun State 2027
// Database: Supabase PostgreSQL (Vercel serverless)
// DATABASE_URL must use pooler: aws-0-[REGION].pooler.supabase.com:6543
// Add ?pgbouncer=true for transaction pooler compatibility with writes
// Run: npx prisma generate && npx prisma db push (or prisma migrate dev)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Volunteer {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String
  phone     String
  lga       String
  message   String?
  createdAt DateTime @default(now())
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
}
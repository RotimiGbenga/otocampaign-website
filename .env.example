# Admin authentication – password for /admin/login
ADMIN_PASSWORD="your-secure-admin-password"

# Email notifications (volunteer + contact)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-username"
SMTP_PASS="your-smtp-password"
ADMIN_EMAIL="admin@campaign.com"

# Optional: From address (defaults to ADMIN_EMAIL)
# SMTP_FROM="noreply@campaign.com"

# Database - Supabase PostgreSQL (required for Vercel serverless)
# Vercel has NO IPv6 - must use pooler (aws-0-*.pooler.supabase.com), NOT db.supabase.co
# Username: postgres.[PROJECT_REF] (not just "postgres")
# Get exact string: Supabase Dashboard → Connect → Transaction pooler
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"
